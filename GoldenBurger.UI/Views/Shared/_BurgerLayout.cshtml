<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="container d-flex align-items-center justify-content-between">

        <a asp-controller="AnaSayfa" asp-action="Index" class="logo d-flex align-items-center me-auto me-lg-0">
            <!-- Uncomment the line below if you also wish to use an image logo -->
            <!-- <img src="assets/img/logo.png" alt=""> -->
            <h1>GoldenBurger<span>.</span></h1>
        </a>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a asp-controller="Menuler" asp-action="Index" ><img style="width: 70px" src="~/menuler-icon.png" alt="Menüler"></a></li>
                <li><a asp-controller="Menuler" asp-action="Burgers"><img style="width: 70px" src="~/burgerler-icon.png" alt="Burgerler"></a></li>
                <li><a asp-controller="Menuler" asp-action="Chips"><img style="width: 70px" src="~/citir-lezzetler-icon.png" alt="Çıtır Lezzetler"></a></li>
                <li><a asp-controller="Menuler" asp-action="Extra"><img style="width: 70px" src="~/tatlilar-icon.png" alt="Tatlılar"></a></li>
                <li><a asp-controller="Menuler" asp-action="Drink"><img style="width: 70px" src="~/icecekler-icon.png" alt="İçecekler"></a></li>
                <li><a asp-controller="Menuler" asp-action="Extra"><img style="width: 70px" src="~/soslar-icon.png" alt="Soslar"></a></li>
                @if (ViewBag.WelcomeMessage == "Giriş Yap")
                {

                    <li><a asp-controller="Login" asp-action="Index">@ViewBag.WelcomeMessage</a></li>
                }
                else if (ViewBag.WelcomeMessage == null)
                {
                    <li><a asp-controller="Login" asp-action="Index">@ViewBag.WelcomeMessage</a></li>
                }
                else
                {
                    <li class="dropdown">
                        <a href="#"><span>@ViewBag.WelcomeMessage</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                        <ul>

                            @if (@ViewBag.WelcomeMessage == "admin@admin.com")
                            {
                                <li><a asp-controller="AdminPanel" asp-action="Index">Admin Paneli</a></li>

                            }
                            <li><a asp-action="SignOut" asp-controller="Login">Hesap Ayarları</a></li>
                            <li><a asp-action="SignOut" asp-controller="Login">Tüm Siparişlerim</a></li>
                            <li><a asp-action="SignOut" asp-controller="Login">Çıkış yap</a></li>
                        </ul>
                    </li>
                }

        </nav>

        <!-- .navbar -->
        <a asp-controller="Basket" asp-action="Index">
            <div class="base">
                <div class="indicator">
                    <div class="noti_count" role="status">@TempData["SayiTutucu"]</div>
                </div>
            </div>
        </a>
        @*         <a asp-controller="Basket" asp-action="Index" class="btn-book-a-table">Sepet</a> *@
        <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
        <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

    </div>
</header>

<!-- End Header -->
