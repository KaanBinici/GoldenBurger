@{
    ViewData["Title"] = "NewProduct";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<main class="main-content position-relative border-radius-lg ">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Lütfen Oluşturacağınız Ürünü Seçin</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <form action="NewProduct" method="post">
                                <div class="col-md-6 mx-auto">
                                    <div class="form-group">
                                        <label for="Secim" class="control-label">Ürünler</label>
                                        <select name="Secim" id="Secim" class="form-control">
                                            <option value="menu">Menü</option>
                                            <option value="burger">Burger</option>
                                            <option value="patates">Patates</option>
                                            <option value="icecek">İçecek</option>
                                            <option value="tatlisos">Tatlı veya Sos</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Onayla" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
